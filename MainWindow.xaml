<Window x:Class="RVDL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RVDL"
        mc:Ignorable="d"
        Title="RVDL (β)" Height="230" Width="650" ResizeMode="NoResize">
    <StackPanel Margin="16">
        <Grid>
            <TextBlock VerticalAlignment="Center">Url of Reddit Post</TextBlock>
            <Button HorizontalAlignment="Right" FontFamily="Segoe MDL2 Assets" Padding="4" BorderBrush="Transparent">&#xE713;</Button>
        </Grid>
        <TextBox Name="txtBoxURL" Margin="0,5,0,0" Padding="4"></TextBox>
        <Button Margin="0,10,0,0" Click="Submit" BorderBrush="Transparent" Padding="4">Submit</Button>
        <TextBlock Name="txtError" Foreground="Red" Margin="0,5,0,0" Visibility="Collapsed"></TextBlock>
    </StackPanel>
</Window>
